{
  "name": "hitcastor-api",
  "version": "1.0.0",
  "description": "REST API for Hitcastor prediction markets - orchestrates resolution flow and serves market data",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "worker": "tsx src/jobs/worker.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest run test/**/*.e2e.test.ts",
    "docs": "open http://localhost:8080/docs",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "hitcastor",
    "prediction-markets",
    "api",
    "fastify",
    "blockchain",
    "resolution"
  ],
  "author": "Hitcastor",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.1.0",
    "bullmq": "^4.15.4",
    "dotenv": "^17.2.3",
    "fastify": "^4.24.3",
    "hitcastor-evidence-store": "file:../hitcastor-evidence-store",
    "pg": "^8.11.3",
    "pino": "^8.16.2",
    "viem": "^1.19.11",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.55.0",
    "pino-pretty": "^13.1.2",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}